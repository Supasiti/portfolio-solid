{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["solid", "prettier"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:import/recommended",
    "plugin:solid/typescript"
  ],
  "rules": {
    // Allow Prettier to throw errors via ESLint
    "prettier/prettier": "error",
    "no-console": "off"
  }
}
